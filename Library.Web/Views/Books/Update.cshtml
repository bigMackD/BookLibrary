@{
}
<h2>Update book</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(x => x.Id)
    <div class="row">
        <div class="col-lg-1 col-md-10 col-xs-12">
            @Html.LabelFor(x => x.Author)
        </div>
        <div class="col-lg-1 col-md-10 col-xs-12">
            @Html.EditorFor(x => x.Author)
            @Html.ValidationMessageFor(x => x.Author, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1 col-md-10 col-xs-12">
            @Html.LabelFor(x => x.Title)
        </div>
        <div class="col-lg-1 col-md-10 col-xs-12">
            @Html.EditorFor(x => x.Title)
            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1 col-md-10 col-xs-12">
            @Html.LabelFor(x => x.ProductionYear)
        </div>
        <div class="col-lg-1 col-md-10 col-xs-12">
            @Html.EditorFor(x => x.ProductionYear)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1 col-md-10 col-xs-12">
            Genre name
        </div>
        <div class="col-lg-1 col-md-10 col-xs-12">
            @Html.DropDownListFor(x => x.GenreId, (IEnumerable<SelectListItem>)ViewBag.Genres)
        </div>
    </div>
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
}
<div>@Html.ActionLink("Back", "Index", "Books", null, new { @class = "btn btn-primary" }) </div>



